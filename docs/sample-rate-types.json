	"pricingModel": {
		"concept": "RateType as Labels/Tags Only",
		"description": "RateType serves as categorization labels (e.g., 'Rack', 'Promotional', 'Corporate') and defines default tax/discount percentages. Actual pricing is handled at the FacilityType level.",
		"workflow": {
			"step1": "Create RateType as a category/label (no price)",
			"step2": "Create FacilityType with actual price",
			"step3": "Link FacilityType to RateType",
			"step4": "FacilityType.price + RateType.defaultTax - RateType.defaultDiscount = Final Price"
		},
		"example": {
			"rateType": {
				"name": "Corporate Rate",
				"defaultTax": 8.0,
				"defaultDiscount": 15.0
			},
			"facilityType": {
				"name": "Deluxe Suite",
				"price": 200.0,
				"rateTypeId": "rateTypeId"
			},
			"calculation": {
				"basePrice": 200.0,
				"tax": "200.0 * 8% = 16.0",
				"discount": "200.0 * 15% = 30.0",
				"finalPrice": "200.0 + 16.0 - 30.0 = 186.0"
			}
		}
	},
