{
	"name": "1BIS-api",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"prestart": "cd bridge && build-bridge.bat",
		"dev": "dotenv nodemon index.ts",
		"start": "dotenv nodemon index.ts",
		"lint": "eslint app/**/*.ts index.ts",
		"format": "eslint app/**/*.ts index.ts --fix",
		"test": "mocha --require ts-node/register tests/**/*.spec.ts",
		"build": "webpack --config webpack.config.js",
		"prod": "node ./dist/server.ts",
		"prisma-docs": "npx prisma studio",
		"prisma-migrate": "npx prisma migrate dev",
		"prisma-generate": "npx prisma generate",
		"prisma-format": "npx prisma format",
		"prisma-seed": "npx prisma db seed",
		"prisma-reset": "npx prisma migrate reset --force",
		"apply-indexes": "ts-node scripts/apply-indexes.ts",
		"prepare": "husky"
	},
	"prisma": {
		"seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"author": "1BIS",
	"license": "ISC",
	"description": "1BIS API is a RESTful API built with TypeScript, Express, and Prisma. It provides a secure and efficient way to manage user authentication, authorization, and data storage.",
	"keywords": [
		"typescript",
		"express",
		"prisma",
		"api",
		"restful",
		"authentication"
	],
	"dependencies": {
		"@logtail/node": "^0.5.2",
		"@logtail/winston": "^0.5.2",
		"@prisma/client": "^6.5.0",
		"@types/cookie-parser": "^1.4.8",
		"@types/express": "^5.0.1",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/multer": "^1.4.13",
		"argon2": "^0.41.1",
		"cookie-parser": "^1.4.7",
		"dotenv": "^16.4.7",
		"express": "^5.1.0",
		"http": "^0.0.1-security",
		"jsonwebtoken": "^9.0.2",
		"multer": "^2.0.1",
		"socket.io": "^4.8.1",
		"cloudinary": "^2.0.1",
		"ts-loader": "^9.5.2",
		"webpack": "^5.96.1",
		"webpack-cli": "^5.1.4",
		"winston": "^3.17.0",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@types/chai": "^5.2.1",
		"@types/cors": "^2.8.18",
		"@types/mocha": "^10.0.10",
		"@types/mongodb": "^4.0.6",
		"@types/node": "^22.14.0",
		"@types/yaml": "^1.9.6",
		"@typescript-eslint/eslint-plugin": "^8.29.0",
		"@typescript-eslint/parser": "^8.29.0",
		"chai": "^4.5.0",
		"dotenv-cli": "^8.0.0",
		"eslint": "^9.24.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.2.6",
		"husky": "^9.1.7",
		"i": "^0.3.7",
		"mocha": "^11.1.0",
		"mongodb": "^6.16.0",
		"nodemon": "^3.1.9",
		"npm": "^11.2.0",
		"prisma": "^6.5.0",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3",
		"yaml": "^2.8.0"
	}
}
